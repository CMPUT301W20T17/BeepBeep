<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/destination"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_below="@+id/pickup_location"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:hint="Enter the destination" />
        <!--
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"-->


    <fragment
        android:id="@+id/pickup_location"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:hint="Enter the pickup location"
        android:layout_below="@+id/pickupView"/>



    <fragment
        android:layout_below="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:id="@+id/map"
        tools:context=".RiderMapActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/confirm"
        android:layout_below="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM" />

    <TextView
        android:id="@+id/pickupView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="Pickup Location"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/destinationView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="Destination"
        android:textSize="8sp"
        android:layout_below="@+id/pickup_location"/>

</RelativeLayout>