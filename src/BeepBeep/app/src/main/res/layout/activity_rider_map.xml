<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/search_button1"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:text="Search"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/pickup_location"
        android:layout_alignParentEnd="true"/>

    <fragment
        android:id="@+id/destination"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_below="@+id/pickup_location"
        android:layout_width="314dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Enter the destination"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pickup_location"
        android:layout_width="314dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Enter the pickup location"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/search_button2"
        android:layout_below="@+id/search_button1"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:text="Search"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/destination"
        android:layout_alignParentEnd="true" />

    <fragment
        android:layout_below="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:id="@+id/map"
        tools:context=".RiderMapActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/confirm"
        android:layout_below="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:text="CONFIRM" />

</RelativeLayout>