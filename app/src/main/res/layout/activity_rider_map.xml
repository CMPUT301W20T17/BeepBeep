<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <!--
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"-->

    <RelativeLayout
        android:id="@+id/thesecondshow"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="invisible"
        >

        <ScrollView
            android:id="@+id/scroll_table"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/scroll_user"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"/>
                <TextView
                    android:id="@+id/scroll_start"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"/>
                <TextView
                    android:id="@+id/scroll_end"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"/>
                <TextView
                    android:id="@+id/scroll_price"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btn_cancel_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_table"
            android:text="CANCEL REQUEST"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thefirstshow"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="visible">
        <fragment
            android:id="@+id/destination"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_below="@+id/destinationView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="Enter the destination" />

        <Button
            android:id="@+id/direction"
            android:layout_below="@+id/destination"
            android:layout_alignParentStart="true"
            android:layout_width="180dp"
            android:text="Direction"
            android:layout_height="match_parent"/>

        <fragment
            android:id="@+id/pickup_location"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="Enter the pickup location"
            android:layout_below="@+id/pickupView"
            />

        <Button
            android:id="@+id/confirm"
            android:layout_below="@+id/destination"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="CONFIRM" />

        <TextView
            android:id="@+id/pickupView"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:text="Pickup Location"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/destinationView"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:text="Destination"
            android:textSize="12sp"
            android:layout_below="@+id/pickup_location"/>

    </RelativeLayout>

    <fragment
        android:layout_below="@+id/thefirstshow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/map"
        tools:context=".RiderMapActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/TestProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:text="Profile" />

    <Button
        android:id="@+id/TestOrderHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TestProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="144dp"
        android:text="OrderHistory" />

    <Button
        android:id="@+id/TestMakePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="51dp"
        android:text="MakePayment" />

    <Button
        android:id="@+id/TestReceivePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="99dp"
        android:text="ReceivePayment" />

    <Button
        android:id="@+id/TestSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="188dp"
        android:text="SignOut" />

</RelativeLayout>

