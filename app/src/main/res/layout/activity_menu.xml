<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alignmentMode="alignMargins"
    android:background="#4D03DAC5"
    android:columnCount="2"
    android:padding="14dp"
    android:rowCount="3">

    <!-- Row 1 -->

    <!-- Column 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/profilemenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Column 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mapMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/mapmenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Map"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Row 2 -->

    <!-- Column 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/payMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="15dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/paymenu"/>
                <!--Icon made by Pixel Perfect from www.flaticon.com -->



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Pay"
    android:textAlignment="center"
    android:textSize="30dp" />

</LinearLayout>
</androidx.cardview.widget.CardView>


<!-- Column 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/scanMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/scanmenu" />
            <!--Icon made by prettycons from www.flaticon.com -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Scan"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Column 1 -->

    <androidx.cardview.widget.CardView
        android:id="@+id/historyMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/historymenu" />
            <!--Icon made by iconixar from www.flaticon.com -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="History"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Column 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logoutMenu"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/logoutmenu" />
            <!--Icon made by Those Icons from www.flaticon.com -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Logout"
                android:textAlignment="center"
                android:textSize="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>



